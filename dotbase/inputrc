# 'bind -p' for full listing
# cursor movements
"\C-a":beginning-of-line
"\C-e":end-of-line
"\C-l":clear-screen

# search back/for(ward) using string from start of the line to curr cursor position
"\C-p":history-search-backward
"\C-n":history-search-forward

# no bell anywhere
set bell-style none

# don't show ctrl chars on terminal
set echo-control-characters off

# case insensitive autocompletion
set completion-ignore-case On

# set max common prefix allowed to be 3 chars. If more than 3, replace all with ...
set completion-prefix-display-length 3

# prefix symlinks to dir with '\' during autocompletion
set mark-symlinked-directories On

# don't ring the bell, show all completions if multiple correct choices
set show-all-if-ambiguous On

# do the above even if no partial completion can be made
set show-all-if-unmodified On

# append completions with file types(same as `stat` sys call)
set visible-stats On

# show completion acc to file types based on LS_COLORS
set colored-stats On

set colored-completion-prefix On
